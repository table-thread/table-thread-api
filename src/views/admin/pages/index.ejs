<%- include('../../includes/header',{loginUser}); %>

<div class="row" id="basic-table">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">Page Manager</h4>
			</div>
			<div class="table-responsive">
				<table class="table table-hover-animation">
					<thead>
						<tr>
							<th>Slug</th>
							<th>Title</th>
							<th>Description</th>
							<th>Status</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						<% if(pages && pages.length == 0){ %>
						<tr>
							<td class="text-center" colspan="8">
								No trainers available !!!
							</td>
						</tr>
						<% } else { %> <% pages.forEach(function(page){ %>
						<tr>
							<td>
								<span class="font-weight-bold"
									><%= page.slug %></span
								>
							</td>
							<td>
								<span class="font-weight-bold"
									><%= page.title %></span
								>
							</td>
							<td>
								<span class="font-weight-bold"
									><%= page.description %></span
								>
							</td>
							
							 <td>
								<%- 
									include('../../components/status',{status:page.status}); 
								%>
							</td>
							<td>
								<div
									class=" d-flex align-items-center col-actions"
								>
									

									<div
										class=" d-flex align-items-center col-actions"
									>
										<!-- <a
											class="mr-1"
											href="/admin/pages/view/"
											data-toggle="tooltip"
											data-placement="top"
											title="view"
											data-original-title="edit"
										>
											<i data-feather="eye"></i>
										</a> -->
										<a class="mr-1" href="/admin/pages/edit/<%= page._id %>" data-toggle="tooltip" data-placement="top" title="edit" data-original-title="edit">
                                                <i data-feather='edit'></i>
                                            </a>
									</div>

								</div>
							</td>
						</tr>

						<% }) %> <% } %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<input type="hidden" id="activeSideBar" value="pages" />
<%- include('../../includes/footer',{loginUser}); %>
