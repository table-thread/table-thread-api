<%- include('../../includes/header',{loginUser}); %>

<!-- users edit start -->
<section class="app-user-edit">
    <div class="card">
        <div class="card-body">
            <!-- users edit account form start -->
            <form class="form-validate" method="POST" novalidate="novalidate" action="/admin/users/edit/<%= user._id %>">
                <div class="mb-2 media">
                        <a href="<%= user.profileImage %>"  target="_blank">
                            <img src="<%= user.profileImage %>" alt="<%= loginUser.name %>" onerror="this.onerror=null;this.src='../../../app-assets/images/default.png';" class="mr-2 rounded cursor-pointer user-avatar users-avatar-shadow my-25" height="90" width="90" id="profileImageImg"/>
                        </a>
                        <div class="media-body mt-50">
                            <h4 style="text-transform: capitalize;"><%= user.name %></h4> 
                            <div class="px-0 mt-1 col-12 d-flex">
                                <label class="mb-0 btn btn-primary mr-75" for="change-picture">
                                    <span class="d-none d-sm-block">Change</span>
                                    <input class="form-control file-upload" folder-name="users"  type="file" id="change-picture" hidden accept="image/png, image/jpeg, image/jpg" file-name="profileImage"/>
                                    <input type="hidden" class="form-control" id="profileImage" name="profileImage" value="<%if(user && user.filePath){%><%= user.filePath %><%}%>">
                                    <input type="hidden" name="fileExists" value="<%if(user && user.fileExists){%><%= user.fileExists %><%}%>" id="profileImageFileExists"/>
                                    <span class="d-block d-sm-none">
                                        <i class="mr-0" data-feather="edit"></i>
                                    </span>
                                </label>
                                <button type="button"  class="btn btn-outline-secondary d-none d-sm-block" onclick="deleteObject('users/<%= user.fileExists %>', '<%= user._id %>', 'user')">Remove</button>
                                <!-- <button class="btn btn-outline-secondary d-block d-sm-none">
                                    <i class="mr-0" data-feather="trash-2"></i>
                                </button> -->
                            </div>
                        </div>
                    </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" placeholder="Name" value="<%= user.name %>" name="name" id="name">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="email" class="form-control" placeholder="Email" value="<%= user.email %>" name="email" id="email">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="mobile">Mobile</label>
                            <input type="mobile" class="form-control" placeholder="Mobile" value="<%= user.mobile %>" name="mobile" id="mobile">
                        </div>
                    </div>

                    <div class="col-md-4"> 
                        <%- 
                            include('../../components/status-edit',{status:user.status}); 
                        %>
                    </div>

                    <div class="col-md-4">
                        <%- 
                            include('../../components/gender',{gender:user.gender}); 
                        %>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="birth">DOB</label>
                            <%- 
                                include('../../components/date',{date:user.dob,name:"dob"}); 
                            %>
                        </div>
                    </div>

                     <div class="col-md-4">
                       <div class="form-group">
                            <label for="status">Goals</label>
                            <select class="form-control" id="status" name="goals" multiple>
                                <% goals.forEach(function(goal){ %>
                                <option value="<%= goal._id %>"  <% user.goals.find((userGoal) => {  if(userGoal.name==goal.name) {  %> selected <% }  }) %>  > <%= goal.name %> </option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    
                    <div class="mt-2 col-12 d-flex flex-sm-row flex-column">
                        <button type="submit" class="mb-1 mr-0 btn btn-primary mb-sm-0 mr-sm-1 waves-effect waves-float waves-light">Save Changes</button>
                        <a class="btn btn-outline-secondary waves-effect" href="/admin/users">Cancle</a>
                    </div>
                </div>
            </form>
            <!-- users edit account form ends -->
        </div>
    </div>
</section>
<!-- users edit end -->

<input type="hidden" id="activeSideBar" value="users">
<%- include('../../includes/footer',{loginUser}); %>